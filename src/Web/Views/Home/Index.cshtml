@model HomeViewModel

@{
    ViewData["Title"] = "Home Page";
}

<h1>Products</h1>

<div class="card mb-3 bg-light">   <!--Bootsrap Inline Forms-->
    <div class="card-body">
        <form class="row row-cols-sm-auto g-3 align-items-center">     <!--mobil de tüm ekranı kapla-normalde yan yana görün-->
            <div class="col-12">
                <label>Category</label>         <!--Bir label bir select-->
            </div>

            <div class="col-12">
                <select class="form-select" asp-items="Model.Categories" asp-for="CategoryId">     <!--Kategorileri getirmesi için-->
                    <option value="">All</option>   <!--Seçili olmadan önce All yazması için-->
                </select>
            </div>

            <div class="col-12">
                <label>Brand</label>

            </div>

            <div class="col-12">
                <select class="form-select" asp-items="Model.Brands" asp-for="BrandId">
                    <option value="">All</option>
                </select>
            </div>

            <div class="col-12">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </form>
    </div>
</div>

<div class="row">
    @foreach (var item in Model.Products)
    {
        <div class="col-lg-3 col-md-4 col-sm-6 mb-3">         <!--large ekranda 4 sütün mediumda 3 smallda 1 sütün olsun-->
            <div class="card">
                <img src="~/img/products//@item.PictureUri" alt="Product Image" class="w-100" />

                <div class="card-body">
                    <h6 class="card-title product-title">@item.Name</h6>
                    <p class="card-text">@item.Price.ToString("c2")</p>
                    <a href="#" class="btn btn-primary">Add To Basket</a>
                </div>
            </div>
        </div>
    }
</div>


